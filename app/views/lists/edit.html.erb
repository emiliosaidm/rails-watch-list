<%= render "components/header"%>
<div class="container mt-5 p-3">
<h1 class="mb-5">Edit the list <%= @list.name %></h1>
<div class="border p-3">
<%= simple_form_for(@list) do |f| %>
  <%= f.input :name %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class: 'btn btn-dark'  %>
<% end %>
<div class="alert position-relative alert-warning alert-dismissible fade show d-flex justify-content-between align-items-center m-5 mb-0" style="margin-top:-30px" role="alert">
  <div><strong>Delete?</strong> Remember that all associated bookmarks will be deleted as well. </div>
  <%= link_to "Delete list", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger align-self-top", style: "color:white" %>
</div>
</div>
</div>
