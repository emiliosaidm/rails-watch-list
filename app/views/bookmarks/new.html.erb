<%= render "components/header"%>
<div class="container mt-5 p-3">
<h1 class="mb-5">Add a new movie to <%= @list.name %></h1>
<div class="border p-3">
<%= simple_form_for([@list, @bookmark]) do |f| %>
  <%= f.association :movie%>
  <%= f.input :comment %>
  <%= f.submit class: 'btn btn-dark'  %>
<% end %></div>
</div>
